{
  "name": "dddperth-website",
  "version": "1.0.0",
  "description": "The website for DDD Perth.",
  "main": "index.js",
  "author": "DDD WA Inc.",
  "license": "N/A",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_OPTIONS='--inspect' next dev",
    "build": "next build",
    "start": "next start",
    "analyze": "cross-env ANALYZE=true npm run build",
    "format-code": "prettier \"pages/**/*.*\" \"components/**/*.*\" \"layouts/**/*.*\" \"config/**/*.*\" --write",
    "lint": "eslint --ext .ts,.tsx .",
    "check-types": "tsc",
    "validate": "npm run lint && npm test && npm run check-types && npm run build",
    "prepare": "husky install",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --watch"
  },
  "dependencies": {
    "@emotion/eslint-plugin": "^11.7.0",
    "@emotion/is-prop-valid": "^1.1.2",
    "@emotion/react": "^11.8.1",
    "@emotion/styled": "^11.8.1",
    "@reach/alert": "^0.8.2",
    "@reach/dialog": "^0.8.2",
    "applicationinsights": "^1.2.0",
    "cross-env": "^7.0.3",
    "date-fns": "^2.15.0",
    "date-fns-tz": "^1.0.10",
    "express": "^4.16.4",
    "next": "^10.1.3",
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-beautiful-dnd": "^12.2.0",
    "react-dom": "^17.0.2",
    "react-ga": "^2.4.1",
    "use-script": "^2.0.0",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@emotion/jest": "^11.8.0",
    "@next/bundle-analyzer": "^9.3.4",
    "@testing-library/dom": "^8.11.1",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest-axe": "^3.5.3",
    "@types/node": "^13.7.1",
    "@types/prop-types": "^15.5.2",
    "@types/react": "17.0.4",
    "@types/react-beautiful-dnd": "^12.1.1",
    "@types/react-ga": "^2.3.0",
    "@types/styled-jsx": "^2.2.1",
    "@types/uuid": "^3.4.5",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest-dom": "^3.9.2",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^3.0.0",
    "eslint-plugin-testing-library": "^5.0.0",
    "husky": "^7.0.2",
    "jest": "^27.3.1",
    "jest-axe": "^5.0.1",
    "lint-staged": ">=10",
    "prettier": "^2.4.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --cache --fix",
    "**/*.+(js|json|ts|tsx)": [
      "npm run format-code",
      "jest --findRelatedTests"
    ]
  }
}
